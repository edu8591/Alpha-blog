<div class="container">


  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors" %>

      <%= form_with(model: @article, local: true, class:"shadow p-3 mb-3 bg-info rounded" )  do |f| %>

        <div class="form-group row">
          <%= f.label :title, class: 'col-2 col-form-lable text-white' %>
          <div class="col-10">
            <%= f.text_field :title, class: 'form-control shadow rounded', placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: 'col-2 col-form-lable text-white' %>
          <div class="col-10">
            <%= f.text_area :description, class: 'form-control shadow rounded', rows:10, placeholder: "Description" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
        <% if @article.id.nil? %>
          <%= f.submit "Create article", class:"btn btn-outline-light btn-lg" %>
        <% else %>
          <%= f.submit "Update article", class:"btn btn-outline-light btn-lg" %>
        <% end %>
        </div>

      <% end %>
    </div>

    <%= link_to '[Cancel and return to articles index]', articles_path, class:"text-info" %>
  </div>


</div>